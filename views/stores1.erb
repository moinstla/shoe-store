<h1><%= @store.name %></h1>



<h3>Brands carried:</h3>
<% if @store.brands.any? %>
<ul>
  <% @store.brands.each do |brand| %>
  <li><a href="/brands/<%= brand.id %>"><%= brand.name %></a></li>
  <% end %>
</ul>
<% end %>

<form action="/stores/<%= @store.id%>/add_brand" method="post">
  <label for="brand_id">Add Shoe Brand</label>
  <select id="brand_id" name='brand_id' type='text'>
    <% @brands.each do |brand| %>
      <option value="<%= brand.id%>"> <%= brand.name %> </option>
    <% end %>
  </select>
  <button type="submit" class="btn">Submit</button>
</form>

<hr>


<a href="/stores/<%= @store.id%>/edit">Edit Store</a>
