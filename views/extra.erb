<form action="/brands/<%= @brand.id%>/update" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="new_name">Update Brand Name:</label>
  <input id="new_name" name="new_name" type="text">
<button type="submit" class="btn btn-info">Submit</button>
</form>


<form action="/brands/<%=@brand.id%>/delete" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit" class="btn btn-danger">Delete Brand</button>
</form>
