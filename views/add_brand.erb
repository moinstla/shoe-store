<h2>Add a brand:</h2>
<div class="row">
  <form action="/brands/add" method="post">
    <label for="brand-name">Name:</label>
    <input type="text" id="brand-name" name="brand-name" class="form-control">
    <label for="brand-price">Price:</label>
    <input type="text" id="brand-price" name="brand-price" class="form-control">
    <button type="submit" class="btn btn-success">Submit</button>
  </form>
</div>
<div class="col-md-6">
  <h3>Brands:</h3>
  <ul>
    <% @brands.each do |brand| %>
    <li><a href="/brands/<%= brand.id %>"><%= brand.name %> $<%= brand.price %></a></li>
    <% end %>
  </ul>
</div>
<a href="/">Home</a>
