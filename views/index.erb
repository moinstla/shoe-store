<h1> Brands and Stores</h1>
<div class="row">
  <div class="col-md-6">
    <h3>Brands:</h3>
    <ul>
      <% @brands.each do |brand| %>
        <li><a href="/brands/<%= brand.id %>"><%= brand.name %></a></li>
      <% end %>
    </ul>
    <a href="/brands/add">Add a Brand</a>
  </div>
  <div class="col-md-6">
    <h3>Stores:</h3>
    <ul>
      <% @stores.each do |store| %>
        <li><a href="/stores/<%= store.id %>"><%= store.name %></a></li>
      <% end %>
    </ul>
    <a href="/stores/add">Add a Store</a>
  </div>
</div>
